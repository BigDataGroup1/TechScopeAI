# ===========================================
# TechScopeAI Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# ----- LLM API KEYS -----
# At least one of these is required
OPENAI_API_KEY=sk-your-openai-key-here
GEMINI_API_KEY=your-gemini-api-key-here

# ----- WEAVIATE CLOUD (Vector Database) -----
# Sign up free at: https://console.weaviate.cloud
# 1. Create a cluster (free sandbox available)
# 2. Copy your cluster URL and API key below

USE_WEAVIATE_QUERY_AGENT=true
WEAVIATE_URL=https://your-cluster-id.weaviate.cloud
WEAVIATE_API_KEY=your-weaviate-api-key-here

# ----- FRONTEND URL (for CORS) -----
# Set this to your deployed frontend URL
ALLOWED_ORIGINS=https://your-frontend.vercel.app,https://your-frontend.netlify.app

# ----- OPTIONAL: PostgreSQL (not needed with Weaviate Cloud) -----
# DATABASE_URL=postgresql://user:password@host:5432/database

